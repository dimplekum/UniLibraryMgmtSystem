                </li>
            </ul>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">Uni Library System</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active" })</li>
                        <li class="nav-item">@Html.ActionLink("Publication Type", "Index", "PublicationTypes", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Publisher", "Index", "Publishers", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Member Type", "Index", "MemberTypes", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Member", "Index", "Members", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Book Category", "Index", "BOOK_CATEGORY", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Book", "Index", "Books", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Author", "Index", "Authors", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Issue", "Index", "Book_Issue", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                        <li class="nav-item">@Html.ActionLink("Recieve", "Index", "Book_Receieved", null, new { @class = "nav-link", style = "background: #d2d6de;color: black;" })</li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer class="main-footer">
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>By : Dimple </b>
            </div>
        </footer>
    </div>


